<%= form_with(model: [:admin, report_issue], class: "space-y-4") do |f| %>
  <% if report_issue.errors.any? %>
    <div class="rounded-lg bg-red-50 border border-red-200 px-4 py-3">
      <ul class="list-disc list-inside text-sm text-red-800">
        <% report_issue.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div>
    <label class="block text-sm font-medium text-gray-700 mb-1">Body</label>
    <%= f.text_area :body, rows: 6, class: "w-full rounded-lg border border-gray-300 px-3 py-2 text-sm focus:outline-none focus:ring-2 focus:ring-blue-500 focus:border-blue-500" %>
  </div>

  <div class="flex gap-3">
    <%= f.submit "Update Report", class: "bg-blue-600 text-white rounded-lg px-4 py-2 text-sm font-medium hover:bg-blue-700 cursor-pointer" %>
    <%= link_to "Cancel", admin_report_issue_path(report_issue), class: "bg-white border border-gray-300 rounded-lg px-4 py-2 text-sm font-medium text-gray-700 hover:bg-gray-50" %>
  </div>
<% end %>
