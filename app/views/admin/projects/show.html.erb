<div class="mb-6">
  <%= link_to "&larr; Back to Projects".html_safe, admin_projects_path, class: "text-sm text-blue-600 hover:text-blue-800" %>
</div>

<h2 class="text-2xl font-semibold text-gray-900 mb-6"><%= @project.name.presence || "Untitled Project" %></h2>

<div class="bg-white rounded-lg border border-gray-200 p-5 mb-6">
  <dl class="grid grid-cols-2 gap-4">
    <div>
      <dt class="text-sm font-medium text-gray-500">User</dt>
      <dd class="mt-1 text-sm text-gray-900">
        <% if @project.user %>
          <%= link_to @project.user.email, admin_user_path(@project.user), class: "text-blue-600 hover:text-blue-800" %>
        <% else %>
          Guest
        <% end %>
      </dd>
    </div>
    <div>
      <dt class="text-sm font-medium text-gray-500">Sheet Size</dt>
      <dd class="mt-1 text-sm text-gray-900"><%= @project.sheet_width %> x <%= @project.sheet_length %></dd>
    </div>
    <div>
      <dt class="text-sm font-medium text-gray-500">Allow Rotation</dt>
      <dd class="mt-1 text-sm text-gray-900"><%= @project.allow_rotation ? "Yes" : "No" %></dd>
    </div>
    <div>
      <dt class="text-sm font-medium text-gray-500">Status</dt>
      <dd class="mt-1 text-sm text-gray-900"><%= @project.archived? ? "Archived" : "Active" %></dd>
    </div>
    <div>
      <dt class="text-sm font-medium text-gray-500">Token</dt>
      <dd class="mt-1 text-sm text-gray-500 font-mono text-xs"><%= @project.token %></dd>
    </div>
    <div>
      <dt class="text-sm font-medium text-gray-500">Created</dt>
      <dd class="mt-1 text-sm text-gray-900"><%= @project.created_at.strftime("%b %d, %Y at %H:%M") %></dd>
    </div>
  </dl>
</div>

<div class="flex items-center justify-between mb-3">
  <h3 class="text-lg font-medium text-gray-900">Optimizations (<%= @optimizations.size %>)</h3>
  <%= link_to "View all", admin_project_optimizations_path(@project), class: "text-sm text-blue-600 hover:text-blue-800" %>
</div>
<% if @optimizations.any? %>
  <div class="bg-white rounded-lg border border-gray-200 overflow-hidden">
    <table class="min-w-full divide-y divide-gray-200">
      <thead class="bg-gray-50">
        <tr>
          <th class="px-5 py-3 text-left text-xs font-medium text-gray-500 uppercase">Status</th>
          <th class="px-5 py-3 text-left text-xs font-medium text-gray-500 uppercase">Efficiency</th>
          <th class="px-5 py-3 text-left text-xs font-medium text-gray-500 uppercase">Sheets</th>
          <th class="px-5 py-3 text-left text-xs font-medium text-gray-500 uppercase">Cut Direction</th>
          <th class="px-5 py-3 text-left text-xs font-medium text-gray-500 uppercase">Created</th>
          <th class="px-5 py-3"></th>
        </tr>
      </thead>
      <tbody class="divide-y divide-gray-100">
        <% @optimizations.each do |opt| %>
          <tr class="hover:bg-gray-50">
            <td class="px-5 py-3 text-sm text-gray-900"><%= opt.status %></td>
            <td class="px-5 py-3 text-sm text-gray-500"><%= opt.efficiency ? number_to_percentage(opt.efficiency, precision: 1) : "—" %></td>
            <td class="px-5 py-3 text-sm text-gray-500"><%= opt.sheets_count || "—" %></td>
            <td class="px-5 py-3 text-sm text-gray-500"><%= opt.cut_direction %></td>
            <td class="px-5 py-3 text-sm text-gray-500"><%= opt.created_at.strftime("%b %d, %Y") %></td>
            <td class="px-5 py-3 text-right">
              <%= link_to "View", admin_project_optimization_path(@project, opt), class: "text-sm text-blue-600 hover:text-blue-800" %>
            </td>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>
<% else %>
  <div class="bg-white rounded-lg border border-gray-200 p-8 text-center text-sm text-gray-500">No optimizations.</div>
<% end %>
