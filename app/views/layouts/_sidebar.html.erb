<div data-controller="sidebar" class="h-screen flex">
  <aside data-sidebar-target="sidebar"
         class="h-full bg-slate-900 text-gray-300 flex flex-col transition-all duration-200 overflow-hidden shrink-0 border-r border-gray-700"
         style="width: 260px;" data-collapsed="false">

    <%# Top: Toggle + App name %>
    <div class="flex items-center gap-2 px-3 py-3 border-b border-gray-800">
      <button data-action="click->sidebar#toggle"
              class="p-1.5 rounded-md hover:bg-gray-800 text-gray-400 hover:text-white transition-colors"
              title="Toggle sidebar">
        <svg class="w-5 h-5" fill="none" stroke="currentColor" stroke-width="1.5" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" d="M3.75 6.75h16.5M3.75 12h16.5m-16.5 5.25h16.5"/>
        </svg>
      </button>
      <span data-sidebar-target="label" class="text-base font-semibold text-white whitespace-nowrap"><%= t("app_name") %></span>
    </div>

    <%# New project button %>
    <div class="px-3 py-3">
      <%= link_to projects_path, class: "flex items-center gap-2 px-2 py-1.5 rounded-md hover:bg-gray-800 transition-colors text-sm" do %>
        <svg class="w-5 h-5 shrink-0" fill="none" stroke="currentColor" stroke-width="1.5" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" d="M12 4.5v15m7.5-7.5h-15"/>
        </svg>
        <span data-sidebar-target="label" class="whitespace-nowrap"><%= t("sidebar.new_cut_list") %></span>
      <% end %>
    </div>

    <%# Recent projects %>
    <div class="flex-1 overflow-y-auto px-3">
      <% if @recent_projects&.any? %>
        <p data-sidebar-target="label" class="text-xs text-gray-500 uppercase tracking-wider mb-2 px-2"><%= t("sidebar.recent_projects") %></p>
        <nav class="space-y-0.5">
          <% @recent_projects.each do |project| %>
            <% active = defined?(@project) && @project&.id == project.id %>
            <%= link_to project_path(project.token),
                  class: "flex items-center gap-2 px-2 py-1.5 rounded-md text-sm truncate transition-colors #{active ? 'bg-gray-800 text-white' : 'hover:bg-gray-800'}" do %>
              <svg class="w-4 h-4 shrink-0 text-gray-500" fill="none" stroke="currentColor" stroke-width="1.5" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" d="M19.5 14.25v-2.625a3.375 3.375 0 0 0-3.375-3.375h-1.5A1.125 1.125 0 0 1 13.5 7.125v-1.5a3.375 3.375 0 0 0-3.375-3.375H8.25m2.25 0H5.625c-.621 0-1.125.504-1.125 1.125v17.25c0 .621.504 1.125 1.125 1.125h12.75c.621 0 1.125-.504 1.125-1.125V11.25a9 9 0 0 0-9-9Z"/>
              </svg>
              <span data-sidebar-target="label" class="truncate"><%= project.name.presence || "#{project.sheet_length}Ã—#{project.sheet_width}" %></span>
            <% end %>
          <% end %>
        </nav>
      <% end %>
    </div>

    <% if !user_signed_in? || !current_user.enterprise_plan? %>
      <div class="px-3 py-2 mb-2 border-t border-gray-800 space-y-2">
        <%= link_to plans_path, class: "flex items-center gap-2 px-2 py-1.5 rounded-md transition-colors  bg-white text-gray-950 hover:bg-gray-200 font-medium text-sm" do %>
          <svg class="w-5 h-5 shrink-0" fill="none" stroke="currentColor" stroke-width="1.5" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" d="M3.75 13.5l10.5-11.25L12 10.5h8.25L9.75 21.75 12 13.5H3.75z"/>
          </svg>
          <span data-sidebar-target="label" class="whitespace-nowrap"><%= t("sidebar.upgrade") %></span>
        <% end %>

        <div data-sidebar-target="label" class="px-2 space-y-1.5">
          <% proj = usage_projects %>
          <div>
            <div class="flex justify-between text-xs text-gray-500 mb-0.5">
              <span><%= t("sidebar.projects_usage") %></span>
              <span><%= proj[:used] %>/<%= proj[:max] %></span>
            </div>
            <div class="h-1 bg-gray-800 rounded-full overflow-hidden">
              <% pct = proj[:max] > 0 ? [(proj[:used].to_f / proj[:max] * 100), 100].min : 0 %>
              <div class="h-full rounded-full <%= pct >= 100 ? 'bg-red-500' : pct >= 75 ? 'bg-amber-500' : 'bg-blue-500' %>" style="width: <%= pct %>%"></div>
            </div>
          </div>

          <% opt = usage_optimizations %>
          <div>
            <div class="flex justify-between text-xs text-gray-500 mb-0.5">
              <span><%= t("sidebar.optimizations_usage") %></span>
              <span><%= opt[:used] %>/<%= opt[:max] %></span>
            </div>
            <div class="h-1 bg-gray-800 rounded-full overflow-hidden">
              <% pct = opt[:max] > 0 ? [(opt[:used].to_f / opt[:max] * 100), 100].min : 0 %>
              <div class="h-full rounded-full <%= pct >= 100 ? 'bg-red-500' : pct >= 75 ? 'bg-amber-500' : 'bg-blue-500' %>" style="width: <%= pct %>%"></div>
            </div>
          </div>
        </div>
      </div>
    <% end %>

    <div class="px-3 py-3 border-t border-gray-800 space-y-2">
      <% if user_signed_in? %>
        <%= link_to edit_user_registration_path, class: "flex items-center gap-2 px-2 py-1.5 rounded-md hover:bg-gray-800 transition-colors text-sm" do %>
          <svg class="w-5 h-5 shrink-0 text-gray-500" fill="none" stroke="currentColor" stroke-width="1.5" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" d="M9.594 3.94c.09-.542.56-.94 1.11-.94h2.593c.55 0 1.02.398 1.11.94l.213 1.281c.063.374.313.686.645.87.074.04.147.083.22.127.325.196.72.257 1.075.124l1.217-.456a1.125 1.125 0 0 1 1.37.49l1.296 2.247a1.125 1.125 0 0 1-.26 1.431l-1.003.827c-.293.241-.438.613-.43.992a7.723 7.723 0 0 1 0 .255c-.008.378.137.75.43.991l1.004.827c.424.35.534.955.26 1.43l-1.298 2.247a1.125 1.125 0 0 1-1.369.491l-1.217-.456c-.355-.133-.75-.072-1.076.124a6.47 6.47 0 0 1-.22.128c-.331.183-.581.495-.644.869l-.213 1.281c-.09.543-.56.941-1.11.941h-2.594c-.55 0-1.019-.398-1.11-.94l-.213-1.281c-.062-.374-.312-.686-.644-.87a6.52 6.52 0 0 1-.22-.127c-.325-.196-.72-.257-1.076-.124l-1.217.456a1.125 1.125 0 0 1-1.369-.49l-1.297-2.247a1.125 1.125 0 0 1 .26-1.431l1.004-.827c.292-.24.437-.613.43-.991a6.932 6.932 0 0 1 0-.255c.007-.38-.138-.751-.43-.992l-1.004-.827a1.125 1.125 0 0 1-.26-1.43l1.297-2.247a1.125 1.125 0 0 1 1.37-.491l1.216.456c.356.133.751.072 1.076-.124.072-.044.146-.086.22-.128.332-.183.582-.495.644-.869l.214-1.28Z"/>
            <path stroke-linecap="round" stroke-linejoin="round" d="M15 12a3 3 0 1 1-6 0 3 3 0 0 1 6 0Z"/>
          </svg>
          <div data-sidebar-target="label" class="whitespace-nowrap truncate">
            <div class="truncate"><%= current_user.email %></div>
            <span class="text-xs text-gray-500 uppercase"><%= t("plans.#{current_user.plan}.name") %></span>
          </div>
        <% end %>
      <% else %>
        <div data-controller="modal">
          <button data-action="click->modal#open"
                  class="flex items-center gap-2 px-2 py-1.5 rounded-md hover:bg-gray-800 transition-colors text-sm w-full">
            <svg class="w-5 h-5 shrink-0 text-gray-500" fill="none" stroke="currentColor" stroke-width="1.5" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" d="M15.75 9V5.25A2.25 2.25 0 0 0 13.5 3h-6a2.25 2.25 0 0 0-2.25 2.25v13.5A2.25 2.25 0 0 0 7.5 21h6a2.25 2.25 0 0 0 2.25-2.25V15m3 0 3-3m0 0-3-3m3 3H9"/>
            </svg>
            <span data-sidebar-target="label" class="whitespace-nowrap"><%= t("sidebar.sign_in") %></span>
          </button>
          <%= render "layouts/login_modal" %>
        </div>
      <% end %>
    </div>

    <div class="px-3 py-3 border-t border-gray-800">
      <%= form_with url: locale_path, method: :patch, class: "flex items-center gap-2" do %>
        <svg class="w-5 h-5 shrink-0 text-gray-500" fill="none" stroke="currentColor" stroke-width="1.5" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" d="M12 21a9.004 9.004 0 0 0 8.716-6.747M12 21a9.004 9.004 0 0 1-8.716-6.747M12 21c2.485 0 4.5-4.03 4.5-9S14.485 3 12 3m0 18c-2.485 0-4.5-4.03-4.5-9S9.515 3 12 3m0 0a8.997 8.997 0 0 1 7.843 4.582M12 3a8.997 8.997 0 0 0-7.843 4.582m15.686 0A11.953 11.953 0 0 1 12 10.5c-2.998 0-5.74-1.1-7.843-2.918m15.686 0A8.959 8.959 0 0 1 21 12c0 .778-.099 1.533-.284 2.253m0 0A17.919 17.919 0 0 1 12 16.5a17.92 17.92 0 0 1-8.716-2.247m0 0A8.966 8.966 0 0 1 3 12c0-1.97.633-3.794 1.708-5.282"/>
        </svg>
        <select name="locale" onchange="this.form.requestSubmit()" data-sidebar-target="label"
                class="text-sm bg-gray-900 border border-gray-700 rounded px-2 py-1 text-gray-300 focus:outline-none focus:ring-1 focus:ring-gray-600">
          <% I18n.available_locales.each do |loc| %>
            <option value="<%= loc %>" <%= "selected" if loc == I18n.locale %>>
              <%= t("locale_selector.#{loc}") %>
            </option>
          <% end %>
        </select>
      <% end %>
    </div>
  </aside>

  <%# Main content area %>
  <div class="flex-1 h-screen overflow-hidden">
    <%= yield %>
  </div>
</div>
