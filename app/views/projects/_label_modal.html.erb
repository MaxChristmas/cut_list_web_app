<dialog data-label-modal-target="dialog"
        data-action="click->label-modal#backdropClose"
        class="backdrop:bg-black/50 bg-transparent p-0 m-auto open:flex items-center justify-center fixed inset-0 h-fit">

  <div class="bg-white border border-gray-200 rounded-xl p-6 w-[480px] max-h-[90vh] overflow-y-auto shadow-xl">
    <div class="flex items-center justify-between mb-5">
      <h2 class="text-lg font-semibold text-gray-900"><%= t("labels.modal_title") %></h2>
      <button data-action="click->label-modal#close"
              class="text-gray-400 hover:text-gray-600 text-xl leading-none">&times;</button>
    </div>

    <%# Project selection (combine labels from multiple projects) %>
    <% other_projects = @recent_projects.select { |p| p.id != @project.id && p.optimizations.exists? } %>
    <div class="mb-5 relative">
      <label class="block text-sm font-medium text-gray-700 mb-2"><%= t("labels.combine_projects") %></label>
      <button type="button"
              data-action="click->label-modal#toggleDropdown"
              data-label-modal-target="dropdownButton"
              data-current-name="<%= @project.name.presence || "#{@project.sheet_length}×#{@project.sheet_width}" %>"
              class="w-full flex items-center justify-between px-3 py-2 text-sm text-gray-700 bg-white border border-gray-300 rounded-lg hover:border-gray-400 focus:border-blue-400 focus:ring-1 focus:ring-blue-400">
        <span data-label-modal-target="dropdownLabel">
          <%= @project.name.presence || "#{@project.sheet_length}×#{@project.sheet_width}" %>
        </span>
        <svg class="w-4 h-4 text-gray-400" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2">
          <path stroke-linecap="round" stroke-linejoin="round" d="M19 9l-7 7-7-7" />
        </svg>
      </button>

      <div data-label-modal-target="dropdown"
           class="hidden absolute z-10 mt-1 w-full bg-white border border-gray-200 rounded-lg shadow-lg max-h-48 overflow-y-auto">
        <%# Current project (always included) %>
        <label class="flex items-center gap-2 px-3 py-2 text-sm text-gray-400 cursor-default">
          <input type="checkbox" checked disabled class="rounded border-gray-300">
          <span><%= @project.name.presence || "#{@project.sheet_length}×#{@project.sheet_width}" %></span>
          <span class="text-xs">(<%= t("labels.current") %>)</span>
        </label>

        <% if other_projects.any? %>
          <div class="border-t border-gray-100"></div>
          <% other_projects.each do |project| %>
            <label class="flex items-center gap-2 px-3 py-2 text-sm text-gray-700 cursor-pointer hover:bg-gray-50">
              <input type="checkbox"
                     data-label-modal-target="project"
                     data-token="<%= project.token %>"
                     data-project-name="<%= project.name.presence || "#{project.sheet_length}×#{project.sheet_width}" %>"
                     data-action="change->label-modal#updateLinks"
                     class="rounded border-gray-300 text-blue-600 focus:ring-blue-500">
              <span><%= project.name.presence || "#{project.sheet_length}×#{project.sheet_width}" %></span>
            </label>
          <% end %>
        <% end %>
      </div>
    </div>

    <p class="text-sm text-gray-500 mb-4"><%= t("labels.modal_description") %></p>

    <div class="grid grid-cols-2 gap-3">
      <% label_formats = [
        { key: "65", cols: 5, rows: 13, w: "38.1", h: "21.2" },
        { key: "40", cols: 4, rows: 10, w: "52.5", h: "29.7" },
        { key: "24", cols: 3, rows: 8,  w: "64",   h: "33.9" },
        { key: "14", cols: 2, rows: 7,  w: "99.1", h: "38.1" },
        { key: "10", cols: 2, rows: 5,  w: "99.1", h: "57" },
        { key: "8",  cols: 2, rows: 4,  w: "99.1", h: "67.7" },
      ] %>

      <% label_formats.each do |fmt| %>
        <a href="<%= export_labels_project_path(@project.token, label_format: fmt[:key]) %>"
           data-label-modal-target="formatLink"
           data-label-format="<%= fmt[:key] %>"
           class="group flex items-center gap-3 p-3 border border-gray-200 rounded-lg hover:border-blue-400 hover:bg-blue-50 transition-colors">

          <%# Mini grid preview %>
          <div class="w-10 h-14 border border-gray-300 rounded-sm flex-shrink-0 p-0.5 bg-gray-50">
            <div class="w-full h-full grid" style="grid-template-columns: repeat(<%= fmt[:cols] %>, 1fr); grid-template-rows: repeat(<%= fmt[:rows] %>, 1fr); gap: 0.5px;">
              <% (fmt[:cols] * fmt[:rows]).times do %>
                <div class="bg-blue-300 rounded-[0.5px]"></div>
              <% end %>
            </div>
          </div>

          <div>
            <div class="text-sm font-medium text-gray-900 group-hover:text-blue-700">
              <%= t("labels.format_name", count: fmt[:key]) %>
            </div>
            <div class="text-xs text-gray-500">
              <%= fmt[:w] %> × <%= fmt[:h] %> mm
            </div>
          </div>
        </a>
      <% end %>
    </div>
  </div>
</dialog>
