<div class="flex h-full" data-controller="resizable-panel">  
  <div class="shrink-0 bg-gray-950 text-gray-300 border-r border-gray-800 overflow-y-auto p-4 space-y-6" style="width: 40%;" data-resizable-panel-target="panel">
    <%= render "form", form_url: project_path(@project.token), form_method: :patch %>

    <% if @project.persisted? %>
      <div class="pt-4 border-t border-gray-800">
        <% if @project.archived? %>
          <%= button_to t("projects.unarchive"), unarchive_project_path(@project.token),
              method: :patch, class: "text-sm text-blue-400 hover:text-blue-300 font-medium" %>
        <% else %>
          <%= button_to t("projects.archive"), archive_project_path(@project.token),
              method: :patch, class: "text-sm text-gray-500 hover:text-gray-400",
              data: { turbo_confirm: t("projects.archive_confirm") } %>
        <% end %>
      </div>
    <% end %>
  </div>

  <div class="w-1 shrink-0 bg-gray-800 hover:bg-blue-400 cursor-col-resize transition-colors"
       data-action="mousedown->resizable-panel#startDrag"></div>

  <div class="flex-1 overflow-y-auto p-6"
       style="background-image: radial-gradient(circle, #d1d5db 1px, transparent 1px); background-size: 20px 20px;">
    <%= render "result_panel" %>
  </div>
</div>
